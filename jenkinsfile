pipeline {
    agent none  

    environment {
        SONARQUBE = 'SonarQube_server'  
    }

    stages {
        stage('Build & SonarQube') {
            agent {
                docker { image 'maven:3.8.6-openjdk-11' }
            }

            steps {
                withSonarQubeEnv('SonarQube_server') {

                    sh 'mvn clean package sonar:sonar'
                }
            }
        }
    }
}
