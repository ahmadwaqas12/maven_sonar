pipeline {
    agent none  

    stages {
        stage('Build & SonarQube') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-11'
                    args '--rm'
                }
            }

            steps {
                withSonarQubeEnv('SonarQube_server') {
                    sh 'mvn clean package sonar:sonar'
                }
                script {
                    def qg = waitForQualityGate()
                    if (qg.status != 'OK') {
                        error "Pipeline failed due to quality gate status: ${qg.status}"
                    }
                }
            }
        }
    }
}
