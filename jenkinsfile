pipeline {
    agent none  // Don't use any agent by default, define it explicitly in stages

    environment {
        SONARQUBE = 'SonarQube_server'  // SonarQube server name, adjust if necessary
    }

    stages {
        stage('Build & SonarQube') {
            agent {
                docker { image 'maven:3.8.6-openjdk-11' }
            }

            steps {
                withSonarQubeEnv('SonarQube_server') {
                    // Run Maven build and SonarQube analysis
                    sh 'mvn clean package sonar:sonar'
                }
            }
        }
    }
}
